{
	"name": "pvc/container",
	"description": "dependency injection container used by pvc",
	"type": "project",
	"authors": [
		{
			"name": "Doug Wilbourne",
			"email": "dougwilbourne@gmail.com"
		}
	],
	"license": "MIT",
	"config": {
		"php": "8.4"
	},
	"autoload": {
		"psr-4": {
			"pvc\\container\\": "src/",
			"pvcTests\\container\\": "tests/"
		}
	},
    "minimum-stability": "dev",
	"require": {
        "pvc/interfaces": "*",
        "pvc/struct": "*",
        "pvc/http": "*",
        "psr/log": "*",
        "psr/http-client": "^1",
        "psr/http-message": "^1",
        "league/container": "^5",
        "php-di/php-di": "^7",
        "monolog/monolog": "^3",
        "guzzlehttp/guzzle": "*"

	},
	"require-dev": {
		"phpunit/phpunit": "^9",
		"phpstan/phpstan": "*"
	}
}
